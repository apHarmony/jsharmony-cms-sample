{
  "id": "listing",
  "title": "Listing",
  "caption": ["Item", "Items"],
  "icon": "material:view_headline",
  "remote_templates": {
    "editor": "%%%editor_base_url%%%/templates/components/listing.html?_=%%%timestamp%%%",
    "publish": "%%%publish_template_base_url%%%/templates/components/listing.html?_=%%%timestamp%%%"
  },
  "properties": {
    "fields": [
      { "name": "minItemHeight", "caption": "Row Min Height", "type": "varchar", "default": "",
        "control": "textbox", "controlstyle": "width:80px", "controlparams": { "placeholder": "ex: 100px" },
      },

      { "name": "minContentWidth", "caption": "Content Min Width", "type": "varchar", "default": "", "nl": false,
        "control": "textbox", "controlstyle": "width:80px", "controlparams": { "placeholder": "ex: 300px" },
      },

      { "name": "imageWidth", "caption": "Image Width", "type": "varchar", "default": "",
        "control": "textbox", "controlstyle": "width:80px", "controlparams": { "placeholder": "ex: 30%" },
      },

      { "name": "minImageWidth", "caption": "Min Width", "type": "varchar", "default": "", "nl": false,
        "control": "textbox", "controlstyle": "width:80px", "controlparams": { "placeholder": "ex: 100px" },
      },

      { "name": "maxImageWidth", "caption": "Max Width", "type": "varchar", "default": "", "nl": false,
        "control": "textbox", "controlstyle": "width:80px", "controlparams": { "placeholder": "ex: 400px" },
      },

      { "name": "cssStyle", "caption": "CSS Style", "type": "varchar", "length": 1024,
        "control": "textbox", "controlstyle": "width:260px", "validate": [ "MaxLength:1024" ] },

      { "name": "cssClass", "caption": "CSS Class", "type": "varchar", "length": 1024,
        "control": "textbox", "controlstyle": "width:260px", "validate": [ "MaxLength:1024" ],
        "lov": { "values": {
          "cmptListing-checklist":"cmptListing-checklist :: Checkboxes",
          "cmptListing-redArrowTitle":"cmptListing-redArrowTitle :: Title w/Red Arrow on Links"
        } },
        "hints": { "separator": " ", "caption": "Add CSS Classes" }
      },

      { "name": "wrapper", "caption": "Wrapper", "type": "varchar",
        "control": "textarea", "controlstyle": "height:150px;width:260px",
        "validate": [
          { "function":"js:if(_obj.wrapper && ((_obj.wrapper||'').toString().indexOf('%%%CONTENT%%%') <= 0)) return 'Wrapper requires %%%CONTENT%%% flag';" },
          { "function":"js:if(_obj.wrapper && ((_obj.wrapper||'').toString().split('%%%CONTENT%%%').length > 2)) return 'Wrapper can only have one %%%CONTENT%%% flag';" }
        ]
      },
      
      { "control": "html", "value": "<b>Example:</b> &lt;div&gt;%%%CONTENT%%%&lt;/div&gt;", "nl": "true" },
    ]
  },
  "data": {
    "layout": "grid_preview",
    "popup": [500,200],
    "fields": [

      { "name": "image", "control": "media_browser", "caption": "Image", "length": 1024, "validate": ["MaxLength:1024"], "controlstyle": "width:320px"},

      { "name": "link", "control": "link_browser", "caption": "Link", "length": 1024, "validate": ["MaxLength:1024"], "controlstyle": "width:320px"},

      { "name": "linkTarget", "type": "varchar", "control": "dropdown", "caption": "Link Target", "default": "",
          "lov": { "values": { "": "Same Window", "_blank": "New Window" } }},

      { "name": "imagePosition", "type": "varchar", "control": "dropdown", "caption": "Image Position", "default": "left",
        "lov": { "values": {
          "left": "Left",
          "right": "Right",
          "aboveTitle": "Above Title",
          "belowTitle": "Below Title",
          "belowTitleLeft": "Below Title :: Left",
          "belowTitleRight": "Below Title :: Right",
          "belowBody": "Below Body",
          "none": "None"
      } }},

      { "name": "contentLayout", "type": "varchar", "control": "dropdown", "caption": "Content", "default": "all", "nl": false,
        "lov": { "values": { "all": "Title + Body", "title": "Title Only", "body": "Body Only", "none": "No Title or Body" } }},    

      { "name": "cssClass", "caption": "CSS Class", "type": "varchar", "length": 1024, "captionstyle":"margin-left:7px;", "nl": false,
        "control": "textbox", "controlstyle": "width:320px", "validate": ["MaxLength:1024"]},

      { "name": "body", "type": "varchar", "control": "hidden", "caption": "" },

      { "name": "title", "type": "varchar", "control": "hidden", "caption": "" }
    ]
  }
}
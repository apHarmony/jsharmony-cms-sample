{
  "id": "insert_page",
  "title": "Insert - Page",
  "caption": ["Page", "Pages"],
  "icon": "material:post_add",
  "remote_templates": {
    "editor": "%%%editor_base_url%%%/templates/components/insert_page.editor.html?_=%%%timestamp%%%",
    "publish": "%%%publish_template_base_url%%%/templates/components/insert_page.publish.html?_=%%%timestamp%%%"
  },
  "properties": {
    "fields": [
      { "name": "cssStyle", "caption": "CSS Style", "type": "varchar", "length": 1024,
        "control": "textbox", "controlstyle": "width:260px", "validate": [ "MaxLength:1024" ] },

      { "name": "cssClass", "caption": "CSS Class", "type": "varchar", "length": 1024,
        "control": "textbox", "controlstyle": "width:260px", "validate": [ "MaxLength:1024" ]
      },

      { "name": "wrapper", "caption": "Wrapper", "type": "varchar",
        "control": "textarea", "controlstyle": "height:150px;width:260px",
        "validate": [
          { "function":"js:if(_obj.wrapper && ((_obj.wrapper||'').toString().indexOf('%%%CONTENT%%%') <= 0)) return 'Wrapper requires %%%CONTENT%%% flag';" },
          { "function":"js:if(_obj.wrapper && ((_obj.wrapper||'').toString().split('%%%CONTENT%%%').length > 2)) return 'Wrapper can only have one %%%CONTENT%%% flag';" }
        ]
      },
      
      { "control": "html", "value": "<b>Example:</b> &lt;div&gt;%%%CONTENT%%%&lt;/div&gt;", "nl": "true" },
    ]
  },
  "data": {
    "layout": "form",
    "popup": [1000,200],
    "fields": [
      { "name": "page", "control": "link_browser", "caption": "Page", "length": 1024, "validate": ["MaxLength:1024"], "controlstyle": "width:320px", "readonly": true}
    ]
  }
}
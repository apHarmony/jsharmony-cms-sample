{
  "id": "banner",
  "title": "Banner",
  "caption": ["Banner", "Banners"],
  "icon": "material:image",
  "remote_template": {
    "editor": "%%%editor_base_url%%%/templates/component/banner.html?_=%%%timestamp%%%",
    "publish": "%%%publish_template_base_url%%%/templates/component/banner.html?_=%%%timestamp%%%"
  },
  "properties": {
    "fields": [
      { "name": "display", "type": "varchar", "control": "dropdown", "caption": "Display", "default": "fixed",
        "lov": { "values": { "fixed": "Fixed Height", "scale": "Scale" } }},

      { "name": "maxHeight", "caption": "Max Height (px)", "type": "int", "default": 400,
        "control": "textbox", "controlstyle": "width:80px",
        "validate": [
          "IsNumeric",
          { "function":"js:var display = (_obj.display||'fixed');  if(display=='fixed' && !_obj.maxHeight) return 'Max Height is required for Fixed Display';" }
        ]
      },

      { "name": "cssStyle", "caption": "CSS Style", "type": "varchar", "length": 1024,
        "control": "textbox", "controlstyle": "width:260px", "validate": ["MaxLength:1024"]},

      { "name": "cssClass", "caption": "CSS Class", "type": "varchar", "length": 1024,
        "control": "textbox", "controlstyle": "width:260px", "validate": ["MaxLength:1024"]},

      { "name": "wrapper", "caption": "Wrapper", "type": "varchar",
        "control": "textarea", "controlstyle": "height:150px;width:260px",
        "validate": [
          { "function":"js:if(_obj.wrapper && ((_obj.wrapper||'').toString().indexOf('%%%CONTENT%%%') <= 0)) return 'Wrapper requires %%%CONTENT%%% flag';" },
          { "function":"js:if(_obj.wrapper && ((_obj.wrapper||'').toString().split('%%%CONTENT%%%').length > 2)) return 'Wrapper can only have one %%%CONTENT%%% flag';" }
        ]
      },
      
      { "control": "html", "value": "<b>Example:</b> &lt;div&gt;%%%CONTENT%%%&lt;/div&gt;", "nl": "true" },
    ]
  },
  "data": {
    "layout": "form",
    "popup": [1000,200],
    "fields": [

      { "name": "image", "control": "media_browser", "caption": "Image", "length": 1024, "validate": ["MaxLength:1024"], "controlstyle": "width:320px"},

      { "name": "link", "control": "link_browser", "caption": "Link", "length": 1024, "validate": ["MaxLength:1024"], "controlstyle": "width:320px"},

      { "name": "linkTarget", "type": "varchar", "control": "dropdown", "caption": "Link Target", "default": "",
          "lov": { "values": { "": "Same Window", "_blank": "New Window" } }},

      { "name": "contentLayout", "type": "varchar", "control": "dropdown", "caption": "Content", "default": "all",
        "lov": { "values": { "all": "Title + Body", "title": "Title Only", "body": "Body Only", "none": "None" } }},

      { "name": "contentPosition", "type": "varchar", "control": "dropdown", "caption": "Position", "default": "full", "captionstyle":"margin-left:7px;", "nl": false,
        "lov": { "values": { "full": "Full Width", "left": "Left", "right": "Right" } }},

      { "name": "contentOverlayShadow", "type": "varchar", "control": "dropdown", "caption": "Shadow Overlay", "default": "none", "captionstyle":"margin-left:7px;", "nl": false,
        "lov": { "values": { "none": "None", "light_content": "Light Shadow Behind Content", "light_full": "Light Shadow Over Full Image", "heavy_content": "Heavy Shadow Behind Content", "heavy_full": "Heavy Shadow Over Full Image" } }},

      { "name": "body", "type": "varchar", "control": "hidden", "caption": "" },

      { "name": "title", "type": "varchar", "control": "hidden", "caption": "" }
    ]
  }
}